{
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/build",
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/client/build/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url"
  }
}